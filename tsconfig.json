{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noResolve": false,
    "module": "es2015",
    "target": "es5",
    "outDir": "dist-es2015",
    "strict": true,
    "lib": [
      "es5", "es2015"
    ]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist-*"
  ]
}
